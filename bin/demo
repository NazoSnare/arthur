#!/usr/bin/env python
import urwid
from arthur import exercises, ui

def run():
    workbench = ui.Workbench()
    tools = [exercises.ExerciseSelectionTool(), Notes()]
    launcher = ui.Launcher(workbench, tools)
    workbench.display(launcher)
    urwid.MainLoop(workbench.widget, ui.DEFAULT_PALETTE).run()



class Notes(object):
    name = "notes"
    position = ("relative", 30), 40, ("relative", 10), 10


if __name__ == "__main__":
   run()
